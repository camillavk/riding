<%= link_to 'Add', new_event_path %>

<table class="table v-middle">
  <thead>
    <tr>
      <th>Name</th>
      <th>Area</th>
      <th>Level</th>
      <th>Plan</th>
      <th>Meeting</th>
      <th>Space</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @eventsToday.any? %>
    <% @eventsToday.each do |event| %>
    <tr>
      <td>
        <% unless event.user.nil? %>
        <%= image_tag event.user.image.url(:thumb) %>
        <%= event.user.name %>
        <% end %>
      </td>
      <td><%= event.area %></td>
      <td><%= event.level %></td>
      <td><%= event.plan %></td>
      <td><%= event.meeting.strftime('%H:%M') %></td>
      <td><%= event.space %></td>
      <td><% if event.user != current_user && event.space != 0 && user_signed_in? %>
          <% unless event.attendees.include?(current_user) %>
        <%= link_to "Join", attending_event_path(event, type: "attending"), method: :put %>
        <% end %>
        <% end %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

